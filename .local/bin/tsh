# @Last Modified time: 2020-06-17 21:56:48

import argparse
import os
import sys

parser = argparse.ArgumentParser(
    description="Create new shell script(s) with shebang and is executable", prog="tsh"
)
parser.add_argument(
    "-e",
    "--extension",
    action="store_true",
    dest="add_ext",
    help="Add .sh extension to the file",
)
parser.add_argument(
    "-p",
    "--path",
    default=os.getcwd(),
    dest="path",
    help="Path that scripts should be created at",
    metavar="PATH",
    type=str,
    nargs=1,
)
parser.add_argument(
    "-s",
    "--shell",
    default="bash",
    help="The name of the shell to be used in shebang (default: %(default)s)",
    metavar="SHELL",
    nargs=1,
    type=str,
)
parser.add_argument("file_names", nargs="*", help="File name(s) that should be created")
if len(sys.argv) == 1:
    parser.print_usage()
    sys.exit(0)
args = parser.parse_args()
path, shell = args.path, args.shell

for f_name in args.file_names:
    f_name = "%s/%s" % (path, f_name)
    if args.add_ext:
        f_name = f_name + ".sh"
    with open(f_name, mode="w") as new_file:
        new_file.writelines("#!/usr/bin/env %s" % args.shell)
    os.chmod(f_name, 0o755)
print("Successfully made sh scripts")
