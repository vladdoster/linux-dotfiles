  "coc.preferences.hoverTarget": "float",
  // Python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "yapf",
  "python.formatting.blackPath": "/home/vlad/.virtualenvs/py38/lib/python3.8/site-packages/yapf",
  "python.linting.pylintPath": "/home/vlad/.virtualenvs/py38/lib/python3.8/site-packages/pylint",
  "python.sortImports.path": "/home/vlad/.virtualenvs/py38/lib/python3.8/site-packages/isort",
