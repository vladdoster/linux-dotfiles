{
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "cquery": {
            "command": "cquery",
            "args": [
                "--log-file=/tmp/cq.log"
            ],
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++"
            ],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cacheDirectory": "/tmp/cquery"
            }
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        },
        "efm": {
            "command": "efm-langserver",
            "args": [],
            // "args": ["-c", "/path/to/your/config.yaml"],
            "filetypes": [
                "vim",
                "eruby",
                "markdown",
                "yaml"
            ]
        }
    }
}
