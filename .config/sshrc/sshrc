#!/bin/bash

#-- correct username --# 
if [ "$USER" != "$(whoami)" ]; then
  USER=$(whoami)
fi

#-- sshrc --#
export SSHRC_DIR="$SSHHOME"/sshrc.d
source "$SSHRC_DIR"/.git-completion.bash && ln -s "$SSHRC_DIR"/.git-completion.bash $HOME
source "$SSHRC_DIR"/.git-prompt.bash && ln -s "$SSHRC_DIR"/.git-prompt.bash $HOME
source "$SSHRC_DIR"/.bashrc

