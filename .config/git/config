  email = mvdoster@gmail.com
[color]
  status = auto
  commit = auto
  diff = auto
  branch = auto
[alias]
  a  = add
  au = add -u
  br = branch
  cm = commit -m
  co = checkout
  diff = diff --ignore-space-change
  dst = diff --staged
  ff = merge origin
  ignore = update-index --assume-unchanged
  p  = push
  pu = pull
  st = status -uno
  stu = status
[apply]
  whitespace = strip
  whitespace = nowarn
[push]
  default = simple
[credential]
  helper = cache --timeout=28800
