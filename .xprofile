#!/bin/sh

login_key_remap    &	# Switch caps/esc
set_background     &	# Self explanatory
xrdb ${XDG_CONFIG_HOME:-$HOME/.config}/X11/Xresources &  # Add cursor theme
xcompmgr           &	# Transparency
dunst              &	# Desktop notifications
xset r rate 300 50 &  # Speed xrate up
unclutter          &	# Remove mouse when idle
